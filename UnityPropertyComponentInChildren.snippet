      <Title>UnityPropertyComponentInChildren</Title>
    </Header>
    <Snippet>
      <Declarations>
        <Literal Editable="true">
          <Default>Component</Default>
          <ID>Component</ID>
        </Literal>
        <Literal Editable="true">
          <Default>target</Default>
          <ID>target</ID>
        </Literal>
		<Literal Editable="true">
          <Default>public</Default>
          <ID>public</ID>
        </Literal>
      </Declarations>
      <Code Language="CSharp"><![CDATA[$Component$ _$target$;
	$public$ $Component$ $target$
	{
		get { return _$target$ ? _$target$ : (_$target$ = GetComponentInChildren<$Component$>()); }
	}

$end$]]></Code>
    </Snippet>
  </CodeSnippet>
